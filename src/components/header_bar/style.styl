#header-bar-wrapper
  width 100%
  //height 50px
  .bar-box
    width 100%
    height 50px
    display flex
    padding-left 50px
    box-sizing border-box
    .bar-content
      //width 130px
      height 50px
      line-height 50px
      list-style none
      cursor pointer
      &:last-child
        span
          border-right 0
      .bar-text
        width 100%
        font-size: 12px;
        font-family: Source Han Sans CN;
        font-weight: 400;
        color: #999999;
        padding 0 10px
        box-sizing border-box
        border-right 1px solid #DCDCDC;
        &.active
          font-size 14px
          color #0F2D63
      .bar-space
        width 10px
        margin-right 20px
        font-size: 12px;
        font-family: Source Han Sans CN;
        font-weight: 400;
        border-right 1px solid #DCDCDC;
