#header-bar-wrapper
  //width 100%
  //height 50px
  position fixed
  right 50px
  top 300px
  z-index 10
  .bar-box
    width 100%
    height 80px
    display flex
    flex-direction column
    //padding-left 50px
    box-sizing border-box
    .bar-content
      background #222222
      width 130px
      height 80px
      line-height 80px
      list-style none
      cursor pointer
      &.active
        font-size 20px
        background skyblue
      .bar-text
        height: 80px;
        text-align: center;
        padding-top: 30px;
        font-weight: 600;
        color: #FFFFFF;
        &.active
          font-size 20px
      .bar-space
        width 10px
        margin-right 20px
        font-size: 12px;
        font-family: Source Han Sans CN;
        font-weight: 400;
        border-right 1px solid #DCDCDC;
        height 100%